<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ff_ff_ff">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:background="@drawable/app_invite_top"
        android:paddingTop="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:onClick="onBackClick"
            android:paddingLeft="26dp"
            android:scaleType="centerInside"
            android:src="@drawable/app_back_white" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="264dp"
        android:layout_marginRight="13dp"
        cardView:cardCornerRadius="16dp"
        cardView:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="13dp"
            android:paddingTop="58dp"
            android:paddingRight="13dp"
            android:paddingBottom="18dp">

            <ImageView
                android:id="@+id/ivQrCode"
                android:layout_width="147.5dp"
                android:layout_height="147.5dp"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:id="@+id/tvRegisterLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_f8f8f8_4"
                android:gravity="center"
                android:paddingLeft="17.5dp"
                android:paddingTop="8dp"
                android:paddingRight="17.5dp"
                android:paddingBottom="8dp"
                android:text="注册链接：www.donwan.com"
                android:textColor="@color/color_00_00_00"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvInviteCode"
        android:layout_width="213dp"
        android:layout_height="32.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="248dp"
        android:background="@drawable/app_invite_code_bg"
        android:elevation="10dp"
        android:gravity="center"
        android:text="邀请码：789046"
        android:textColor="@color/color_ff_ff_ff"
        android:textSize="16dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvSave"
        android:layout_width="344dp"
        android:layout_height="74.5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/app_save_qrcode"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="@string/app_save_poster"
        android:textColor="@color/color_ff_ff_ff"
        android:textSize="21dp" />


</RelativeLayout>
