<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="13dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="22dp">

        <ImageView
            android:id="@+id/ivCoinIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@drawable/app_eth" />


        <TextView
            android:id="@+id/tvCoinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivCoinIcon"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ivCoinIcon"
            android:text="BTC"
            android:textColor="@color/color_01_01_01"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCoinName"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ivCoinIcon"
            android:layout_toLeftOf="@+id/tvEqualValue"
            android:paddingTop="3dp"
            android:paddingRight="18dp"
            android:singleLine="true"
            android:textColor="@color/color_b2_b2_b2"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvTotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivCoinIcon"
            android:layout_alignParentRight="true"
            android:text="12.2982"
            android:textColor="@color/color_00_00_00"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEqualValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTotalValue"
            android:layout_alignParentRight="true"
            android:paddingTop="3dp"
            android:text="â‰ˆ $ 184,470325"
            android:textColor="@color/color_66_66_66"
            android:textSize="10dp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
